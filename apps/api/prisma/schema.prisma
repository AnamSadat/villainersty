generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id                  Int       @id @default(autoincrement())
  name                String    @unique
  slug                String    @unique
  created_at          DateTime  @default(now())
  updated_at          DateTime  @updatedAt
}
